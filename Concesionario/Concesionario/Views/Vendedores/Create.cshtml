@model Concesionario.Models.Vendedores

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Vendedores", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(c => c.RazonSocial, "Razón Social")
        @Html.TextBoxFor(c => c.RazonSocial, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Dni, "DNI")
        @Html.TextBoxFor(c => c.Dni, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Direccion, "Dirección")
        @Html.TextBoxFor(c => c.Direccion, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Localidad, "Localidad")
        @Html.TextBoxFor(c => c.Localidad, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Telefono, "Teléfono")
        @Html.TextBoxFor(c => c.Telefono, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Celular, "Celular")
        @Html.TextBoxFor(c => c.Celular, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Email, "E-Mail")
        @Html.TextBoxFor(c => c.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Observaciones, "Observaciones")
        @Html.TextBoxFor(c => c.Observaciones, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <td colspan="2"><button type="submit" class="btn btn-primary">Cargar</button></td>
    </div>
}

@Html.ActionLink("Volver al Listado", "Index")

