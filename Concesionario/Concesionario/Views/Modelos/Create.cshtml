@model Concesionario.Models.Modelos

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Modelos", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.IdMarca, "Marca:", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.DropDownList("IdMarca", (List<SelectListItem>)ViewBag.Marcas, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Modelo, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.TextBoxFor(model => model.Modelo, new { htmlAtributes = new { @class = "form-control col-md-10" } })
    </div>

<div class="form-group">
    <td colspan="2"><button type="submit" class="btn btn-primary">Cargar</button></td>
</div>

}
