@model IEnumerable<Concesionario.Models.Marcas>

@{
    ViewBag.Title = "Marcas";
}

@Html.ActionLink("Nueva Marca", "Create", "Marcas")


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Marca</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Marca</td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, FormMethod.Get)
                </td>
            </tr>
        }
    </tbody>
</table>
